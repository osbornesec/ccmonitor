{
  "hooks": {
    "PostToolUse": [
      "bash $CLAUDE_PROJECT_DIR/.claude/scripts/uv_runner.sh $CLAUDE_PROJECT_DIR/.claude/hooks/subagentstop_todo_reminder.py"
    ],
    "PreToolUse": [],
    "UserPromptSubmit": [],
    "PreCompact": [],
    "Stop": []
  },
  "tools": {
    "enabled": [
      "Bash",
      "Edit", 
      "Glob",
      "Grep",
      "LS",
      "MultiEdit",
      "Read",
      "Task",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "Write"
    ],
    "permissions": {
      "Bash": {
        "patterns": [
          "uv *",
          "chmod +x *",
          "mkdir -p *",
          "python *",
          "pytest *"
        ]
      }
    }
  },
  "project": {
    "name": "ccmonitor",
    "description": "Claude Code monitoring and JSONL context pruning system",
    "hooks_enabled": true,
    "auto_todo_reminders": true
  },
  "settings": {
    "hook_timeout_seconds": 10,
    "max_hook_failures": 3,
    "log_level": "INFO",
    "state_persistence": true
  }
}