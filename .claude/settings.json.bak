{
  "hooks": {
    "PreToolUse": [
      {
        "description": "Block modifications to protected configuration files and dangerous commands",
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR/.claude/hooks\" && uv run claude-hook-pre-tool-use",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "description": "Auto-format, lint, and verify Rust code after edits",
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR/.claude/hooks\" && uv run claude-hook-post-tool-use",
            "timeout": 90
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "description": "Inject quality standards context and detect bypass attempts",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR/.claude/hooks\" && uv run claude-hook-user-prompt-submit",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "description": "Final quality gate check before stopping",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR/.claude/hooks\" && uv run claude-hook-stop",
            "timeout": 120
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "description": "Initialize session with quality standards reminder",
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR/.claude/hooks\" && uv run claude-hook-session-start",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "description": "Log all protection events",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR/.claude/hooks\" && uv run claude-hook-notification",
            "timeout": 5
          }
        ]
      }
    ]
  }
}